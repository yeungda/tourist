#!/usr/bin/env ruby
require 'tourist'

command = ARGV[0]
if "describe" == command
  Dir["./states/*.rb"].each {|file| require file }
  Dir["./users/*.rb"].each {|file| require file }
  Dir["./journeys/*.rb"].each {|file| require file }

  main = Tourist::Main.new(@world)
  main.describe
elsif "tour" == command
  Dir["./tools/*.rb"].each {|file| require file }
  Dir["./states/*.rb"].each {|file| require file }
  Dir["./users/*.rb"].each {|file| require file }
  Dir["./journeys/*.rb"].each {|file| require file }

  main = Tourist::Main.new(@world)
  main.tour
elsif "verify" == command
  Dir["./expectations/*.rb"].each {|file| require file }
  verify
else
  puts "Usage: tourist (describe|tour|verify)"
end
