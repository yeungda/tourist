#!/usr/bin/env ruby
require 'tourist'

command = ARGV[0]
options = if ARGV.size <= 1 then nil else ARGV[1..-1] end
if "describe" == command
  (
    Dir["./states/*.rb"] +
    Dir["./users/*.rb"] +
    Dir["./journeys/*.rb"]
  ).each {|file| require file }

  main = Tourist::Main.new(@world)
  main.describe
elsif "drive" == command
  (
    Dir["./tools/*.rb"] + 
    Dir["./states/*.rb"] + 
    Dir["./users/*.rb"] + 
    Dir["./journeys/*.rb"]
  ).each {|file| require file }

  main = Tourist::Main.new(@world)
  main.drive options
elsif "verify" == command
  Dir["./expectations/*.rb"].each {|file| require file }
  verify
else
  puts "Usage: tourist (describe|drive|verify)"
end
